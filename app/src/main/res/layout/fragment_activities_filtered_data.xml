<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.ActivityTracker"
    tools:context=".fragments.ActivitiesFilteredDataFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Filtered Activities List"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/filterIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filtered"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activityDetailsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" />
</RelativeLayout>
